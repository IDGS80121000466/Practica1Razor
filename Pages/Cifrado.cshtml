@page
@model Practica1.Pages.CifradoModel
@{
}
<h2>Cifrado y Descifrado César</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Cifrar</h3>
        <form method="POST" asp-page-handler="Cifrar" class="p-3 bg-light rounded shadow-sm">
            <div class="mb-3">
                <label for="mensajeOriginalCifrar" class="form-label">Mensaje Original:</label>
                <input type="text" id="mensajeOriginalCifrar" asp-for="MensajeOriginalCifrar" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="nCifrar" class="form-label">Valor de N:</label>
                <input type="number" id="nCifrar" asp-for="NCifrar" class="form-control" />
            </div>
            <button type="submit" name="handler" value="OnPostCifrar" class="btn btn-primary">Cifrar</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.MensajeCifrado)){
            <div class="alert alert-info mt-3">
                <h4>Mensaje Cifrado:</h4>
                <p>@Model.MensajeCifrado</p>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h3>Descifrar</h3>
        <form method="POST" asp-page-handler="Descifrar" class="p-3 bg-light rounded shadow-sm">
            <div class="mb-3">
                <label for="mensajeOriginalDescifrar" class="form-label">Mensaje Cifrado:</label>
                <input type="text" id="mensajeOriginalDescifrar" asp-for="MensajeOriginalDescifrar" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="nDescifrar" class="form-label">Valor de N:</label>
                <input type="number" id="nDescifrar" asp-for="NDescifrar" class="form-control" />
            </div>
            <button type="submit" name="handler" value="OnPostDescifrar" class="btn btn-primary">Descifrar</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.MensajeDescifrado)){
            <div class="alert alert-info mt-3">
                <h4>Mensaje Descifrado:</h4>
                <p>@Model.MensajeDescifrado</p>
            </div>
        }
    </div>
</div>
